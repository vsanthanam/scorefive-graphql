{
    "name": "scorefive-graphql",
    "module": "index.ts",
    "devDependencies": {
        "@apollo/server": "^5.2.0",
        "@as-integrations/express5": "^1.1.2",
        "@graphql-codegen/cli": "^6.1.0",
        "@graphql-codegen/introspection": "^5.0.0",
        "@graphql-codegen/typescript": "^5.0.7",
        "@graphql-codegen/typescript-resolvers": "^5.1.5",
        "@types/bun": "latest",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/figlet": "^1.7.0",
        "@types/pg": "^8.16.0",
        "@typescript-eslint/eslint-plugin": "^8.52.0",
        "@typescript-eslint/parser": "^8.52.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "pino-pretty": "^13.1.3",
        "prisma": "^7.2.0"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "private": true,
    "scripts": {
        "generate:prisma": "bunx prisma generate",
        "generate:graphql": "graphql-codegen --config codegen.graphql.ts",
        "generate": "bun generate:prisma && bun generate:graphql",
        "start": "bun generate && bun run src/index.ts",
        "compile": "bun generate && bunx tsc --noEmit",
        "db:up": "docker compose up -d",
        "db:down": "docker compose down",
        "db:explore": "prisma studio --config ./prisma.config.ts",
        "migrate:dev": "bunx prisma migrate dev",
        "migrate": "bunx prisma migrate deploy",
        "migrate:reset": "bunx prisma migrate reset --force",
        "format": "prettier . --write && bunx prisma format",
        "format:check": "prettier . --check",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "check": "bun format:check && bun lint",
        "fix": "bun format && bun lint:fix"
    },
    "type": "module",
    "dependencies": {
        "@prisma/adapter-pg": "^7.2.0",
        "@prisma/client": "^7.2.0",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "dataloader": "^2.2.3",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "express-oauth2-jwt-bearer": "^1.7.2",
        "figlet": "^1.9.4",
        "jose": "^6.1.3",
        "pg": "^8.16.3",
        "pino": "^10.1.0",
        "prettier": "^3.7.4"
    }
}
